{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "incremental": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@widgets/*": ["./widgets/*"],
      "@features/*": ["./features/*"],
      "@entities/*": ["./entities/*"],
      "@shared/*": ["./shared/*"],
      "@public/*": ["./public/*"],
      "@config/*": ["./config/*"],
      "@infra/*": ["./infra/*"],
      "@tests/*": ["./tests/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "shared/types",
    "stylelint/plugins",
    "tests"
  ],
  "exclude": ["node_modules", "dist", ".next", "**/__mocks__/**"]
}
