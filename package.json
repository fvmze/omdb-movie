{
  "name": "omdb-movie-catalog",
  "version": "0.1.0",
  "private": true,
  "description": "Modern OMDB-based movie catalog with Next.js",
  "author": "Timur Malyutin <timur.malyutin@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/fvmze/omdb-movie.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "analyze": "NEXT_BUNDLE_ANALYZE=true next build",
    "test": "vitest run --reporter verbose",
    "test:watch": "vitest --reporter verbose",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter verbose -- \"shared/lib/**/__tests__/*.test.ts\"",
    "test:integration": "vitest run --reporter verbose -- \"infra/**/__tests__/*.test.ts\"",
    "test:watch:unit": "vitest --reporter verbose -- \"shared/lib/**/__tests__/*.test.ts\"",
    "test:watch:integration": "vitest --reporter verbose -- \"infra/**/__tests__/*.test.ts\"",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "e2e:headed": "cypress run --headed --browser chrome",
    "e2e:spec": "cypress run --spec 'cypress/e2e/**/*.cy.{ts,tsx}'",
    "format": "biome format",
    "format:fix": "biome format --write",
    "lint": "npm run lint:code && npm run lint:css",
    "lint:fix": "npm run lint:code:fix && npm run lint:css:fix",
    "lint:code": "biome check .",
    "lint:code:fix": "biome check --write",
    "lint:css": "stylelint '**/*.{css,scss}' --ignore-path .gitignore",
    "lint:css:fix": "stylelint '**/*.{css,scss}' --fix --ignore-path .gitignore",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.77.0",
    "@tanstack/react-query-devtools": "^5.77.1",
    "clsx": "^2.1.1",
    "cookie": "^1.0.2",
    "next": "15.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^3.3.0",
    "tsyringe": "^4.10.0",
    "zod": "^3.25.28",
    "zundo": "^2.3.0",
    "zustand": "^5.0.5",
    "zustand-async-slice": "^1.0.5",
    "zustand-sync-tabs": "^0.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@chromatic-com/storybook": "^3.2.6",
    "@next/bundle-analyzer": "15.4.0-canary.51",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/experimental-nextjs-vite": "8.6.14",
    "@storybook/react": "^8.6.14",
    "@svgr/core": "^8.1.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "22.15.21",
    "@types/react": "19.1.5",
    "@types/react-dom": "19.1.5",
    "@types/webpack": "^5.28.5",
    "cypress": "^14.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "postcss": "^8.5.3",
    "storybook": "^8.6.14",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^4.1.7",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4",
    "zod-to-ts": "^1.2.0"
  },
  "engines": {
    "node": ">=22.0.0 <23"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["biome check --apply", "git add"],
    "*.{css,scss}": ["stylelint --fix", "git add"]
  }
}
